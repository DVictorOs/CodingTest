<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_vertical"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.ForecastActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/forecast_margin_start_end"
            android:layout_marginEnd="@dimen/forecast_margin_start_end"
            android:layout_weight="1"
            android:background="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_weather"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/snowflake" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_1"
                        android:textSize="@dimen/forecast_primary_text_size"
                        android:textStyle="bold"
                        tools:text="Weather" />

                    <TextView
                        android:id="@+id/tv_weather_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_2"
                        android:textSize="@dimen/forecast_secondary_text_size"
                        tools:text="condition" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/forecast_margin_start_end"
            android:layout_marginEnd="@dimen/forecast_margin_start_end"
            android:layout_weight="1"
            android:background="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_humidity"
                    android:layout_width="@dimen/forecast_image_size"
                    android:layout_height="@dimen/forecast_image_size"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/humidity" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_1"
                        android:textSize="@dimen/forecast_primary_text_size"
                        android:textStyle="bold"
                        tools:text="Humidity" />

                    <TextView
                        android:id="@+id/tv_humidity_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_2"
                        android:textSize="@dimen/forecast_secondary_text_size"
                        tools:text="per cent" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/forecast_margin_start_end"
            android:layout_marginEnd="@dimen/forecast_margin_start_end"
            android:layout_weight="1"
            android:background="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_temp"
                    android:layout_width="@dimen/forecast_image_size"
                    android:layout_height="@dimen/forecast_image_size"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/temperature" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_1"
                        android:textSize="@dimen/forecast_primary_text_size"
                        android:textStyle="bold"
                        tools:text="Temperature" />

                    <TextView
                        android:id="@+id/tv_temperature_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_2"
                        android:textSize="@dimen/forecast_secondary_text_size"
                        tools:text="temperature" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/forecast_margin_start_end"
            android:layout_marginEnd="@dimen/forecast_margin_start_end"
            android:layout_weight="1"
            android:background="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_wind"
                    android:layout_width="@dimen/forecast_image_size"
                    android:layout_height="@dimen/forecast_image_size"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/wind" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_1"
                        android:textSize="@dimen/forecast_primary_text_size"
                        android:textStyle="bold"
                        tools:text="Wind Speed" />

                    <TextView
                        android:id="@+id/tv_wind_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_2"
                        android:textSize="@dimen/forecast_secondary_text_size"
                        tools:text="wind" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/forecast_margin_start_end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/forecast_margin_start_end"
        android:background="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="@dimen/forecast_image_size"
                    android:layout_height="@dimen/forecast_image_size"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/location" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_1"
                        android:textSize="@dimen/forecast_primary_text_size"
                        android:textStyle="bold"
                        tools:text="Location" />

                    <TextView
                        android:id="@+id/tv_location_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/forecast_margin_text"
                        android:gravity="end"
                        android:textColor="@color/color_2"
                        android:textSize="@dimen/forecast_secondary_text_size"
                        tools:text="Country" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/color_4" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="20dp"
        android:src="@drawable/ic_temp"
        android:backgroundTint="@color/color_2"/>
</LinearLayout>